<% layout('./layout/boilerplate') %> 
<style>
    body{
        background-color: black;
        color: white;
    }
    .my-nav{
        background-color: black;
        height: 80px;
    }
</style>
<h1 class="text-center my-2">Add Product</h1>

    <div class="col-6 offset-3">
        <form action="/home/add-product" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input type="text" name="name" id="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Product Image</label>
                <input type="file" name="image" id="image" class="form-control" required multiple>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Product Price</label>
                <input type="number" name="price" id="price" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Product Description</label>
                <textarea name="description" id="description" cols="30" rows="8" class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Product Stock</label>
                <input type="number" name="stock" id="stock" class="form-control" required min="0" max="20">
            </div> 
            <div class="mb-3 d-none">
                <label for="qty" class="form-label">Quantity</label>
                <input type="number" name="qty" id="qty" class="form-control" value="1">
            </div>
            <a href="/seller" class="btn btn-warning me-1">Back</a>
            <button class="btn btn-primary">Add Product</button>  
        </form>
        
    </div>

