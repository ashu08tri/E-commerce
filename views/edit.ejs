<% layout('./layout/boilerplate') %>
<style>
    body{
        background-color: black;
        color: white;
    }
    .my-nav{
        background-color: black;
        height: 80px;
    }
</style>
<h1 class="text-center my-2">Edit Product</h1>

    <div class="col-6 offset-3">
        <form action="/product/<%= edit._id %>/edit?_method=put" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= edit.name %> " required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Product Image</label>
                <input type="file" name="image" id="image" class="form-control" multiple>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Product Price</label>
                <input type="number" name="price" id="price" class="form-control" value="<%= edit.price %>" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Product Description</label>
                <textarea name="description" id="description" cols="30" rows="8" class="form-control" required><%= edit.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Product Stock</label>
                <input type="number" name="stock" id="stock" class="form-control" required min="0" max="20" value="<%= edit.stock %>">
            </div>
            <div class="mb-3 d-none">
                <label for="qty" class="form-label">Quantity</label>
                <input type="number" name="qty" id="qty" class="form-control" value="<%= edit.qty %>">
            </div>
            <div class="mb-3">
                <% edit.image.forEach(function(img,i){ %>
                    <img src="<%= img.thumbnail %> " alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= img.filename %>">
                        <label for="image-<%= i %>">Delete?</label>
                    </div>
                    <% }) %> 
            </div>
            <button class="btn btn-primary">Save Changes</button>
        </form>
    </div> 